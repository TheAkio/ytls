{
	"compileOnSave": false,
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "ES2017",
		"outDir": "./build",
		"lib": [
			"es2017"
		],
		"types": [
			"node"
		],
		"baseUrl": ".",
		"paths": {},
		"declaration": true,
		"sourceMap": true,
		"pretty": false,
		"strict": true,
		"strictNullChecks": false,
		"skipLibCheck": false,
		"allowJs": false,
		"forceConsistentCasingInFileNames": true,
		"disableSizeLimit": true,
		"experimentalDecorators": true
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"./node_modules/**/*",
		"./src/**/*.spec.ts"
	]
}
